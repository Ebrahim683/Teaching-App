<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.teachingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeachingApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.attendance.AttendanceStudentListActivity"
            android:exported="true"
            android:label="Attendance Students" />
        <activity
            android:name=".ui.attendance.AttendanceCourseIdActivity"
            android:exported="true"
            android:label="Attendance Date" />
        <activity
            android:name=".ui.coursedetails.TeacherCourseDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.balance.BalanceActivity"
            android:exported="true"
            android:label="Balance" />
        <activity
            android:name=".ui.result.ResultActivity"
            android:exported="true"
            android:label="Result" />
        <activity
            android:name=".ui.profile.UpdateProfileActivity"
            android:exported="true"
            android:label="Update Profile" />
        <activity
            android:name=".ui.result.AllStudentsResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.course.CoursesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.users.AllUsersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profile.StudentProfileActivity"
            android:exported="true"
            android:label="My Profile" />
        <activity
            android:name=".ui.dashboard.studentdashboard.StudentDashboardActivity"
            android:exported="true"
            android:label="Student Portal" />
        <activity
            android:name=".ui.dashboard.teacherdashboard.TeacherDashboardActivity"
            android:exported="true"
            android:label="Teacher's Portal" />
        <activity
            android:name=".ui.auth.StudentRegisterActivity"
            android:exported="true"
            android:label="Student Register" />
        <activity
            android:name=".ui.auth.TeacherRegisterActivity"
            android:exported="true"
            android:label="Teacher Register" />
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>